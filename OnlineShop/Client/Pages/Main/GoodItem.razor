<MudPaper Class="my-4 pa-4">
    <MudGrid>
        <MudItem lg="10" xs="8">
            <MudText Typo="Typo.h6">@Name</MudText>

        </MudItem>
        <MudItem lg="2" xs="4" Class="d-flex justify-end align-center pa-auto">
            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Filled.AddShoppingCart" Color="Color.Primary" @onclick="OnBuy" Size="Size.Medium">@Price ₽</MudButton>
        </MudItem>
    </MudGrid>
</MudPaper>

@code{

    //<MudButton Variant="Variant.Outlined" Color="Color.Primary" @onclick="OnBuy"></MudButton>

    [Parameter]
    public int ID { get; set; }

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public int Price { get; set; }

    [Parameter]
    public EventCallback<int> OnBuyGood { get; set; }

    private void OnBuy()
    {
        OnBuyGood.InvokeAsync(ID);
    }

}